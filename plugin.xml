<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="eu.endare.phonegap.WPPush"
    version="0.0.1">

    <name>Urban Airship Push Notification Plugin for Windows Phone</name>
    
    <description>Urban Airship Push Windows Phone Notification Plugin for PhoneGap/Cordova</description>
    
    <license>Apache 2.0</license>
    
    <engines>
      <engine name="cordova" version=">=3.0.0" />
    </engines>

    <dependency id="org.apache.cordova.device" url="https://git-wip-us.apache.org/repos/asf/cordova-plugin-device.git" commit="master" subdir="." />

    <js-module src="www/WPPush.js" name="WPPush">
         <clobbers target="WPPush" />
    </js-module>

    <!-- Windows Phone 8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="PushNotificationPlugin">
                <param name="wp-package" value="PushNotificationPlugin"/>
            </feature>
        </config-file>

        <source-file src="src/PushNotificationPlugin.cs" />
    </platform>
</plugin>